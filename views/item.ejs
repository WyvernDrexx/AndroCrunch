<% include partials/header %>
<div class="bg-white">
    <div class="container-fluid pt-5 pt-md-3 bg-gradient  pb-6 text-white bottom-rounded">
        <h1 class=" text-center text-white mt-6"><%= file.filename %></h1>
        <p class="small text-gray text-center pt-5 pb-6 mb-5">Home > Contents > <%= category.toUpperCase() %></p>
    </div>
</div>
<section class="download-item bg-white" aria-label="The main section for download">
    <div class="img">
        <% if(category === "wallpapers"){ %>
        <img src="/uploads/<%= file.referenceFile %>">
        <% }else{ %>
        <% if(category === "apps"){ %>
        <img src="/thumbnails/<%= file.thumbnail %>" class="circle">
        <% } else{ %>
        <img src="/thumbnails/<%= file.thumbnail %>">
        <% } %>
        <% } %>
    </div>
    <div class="details pt-md-">
        <p class="text-gray small text-center m-0 pt-5"><%= file.downloads %> Downloads</p>
        <p class="text-gray small text-center m-0">by <span class="text-dark"><%= file.uploader %></span> in
            <span class="text-dark">Ringtones</span> on <%= moment.tz(file.created, "Asia/Calcutta").format("dddd, MMMM Do YYYY") %></p>
        <div class="text-center ">
            <div class="row justify-content-center mt-0 mt-md-3">
                <div class="col-md-4">
                    <a href="/<%= category %>/<%= file._id %>/download"
                        class="btn btn-outline-primary rounded-pill px-5 pt-2 pb-2 active no-border mt-5 mt-md-0">
                        Download
                    </a>
                </div>
                <div class="col-md-4">
                    <span class="share text-left mt-4 mt-md-0">
                        <span class="purple-text-color text-left ml-2">Share</span>
                        <a class="ml-3" href="/"><i class="fab fa-facebook-f big" aria-label="facebook connect"></i></a>
                        <a href="/"><i class="fab fa-whatsapp big" aria-label="whatsapp connect"></i></a>
                        <a href="/"><i class="fab fa-instagram big" aria-label="instagram connect"></i></a>
                    </span>
                </div>
            </div>


        </div>
    </div>
    <h3 class="text-center mb-0 pt-5 pb-4">Details</h3>
    <p class=" main-content text-gray small ">
        <%= file.description %>
    </p>
    <div class="container main-content pt-6s pb-5">
        <h1 class="display-5 text-center">Share Your Opinions</h1>
        <p class="xs-small text-gray text-center">Your email address will not be published. Required fields are marked
            with *</p>
        <form class="comment mt-3 text-center">
            <div class="row">
                <div class="col-sm">
                    <textarea class=" bg-white rounded" placeholder="Write Your Comment *"></textarea>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-sm">
                    <input class="bg-white rounded" type="text" placeholder="Name *" required>
                </div>
                <div class="col-sm">
                    <input class="bg-white  rounded" type="email" placeholder="Email *" required>
                </div>
                <div class="col-sm">
                    <input class="bg-white rounded" type="text" placeholder="Website" required>
                </div>
            </div>
            <button class="btn btn-primary text-white btn-md rounded-pill mt-4 text-center px-4 pt-2 pb-2"
                type="submit">Post
                Comment</button>
        </form>
    </div>
</section>
<section class="bg-white">
    <h1 class="display-5 text-center">Recommended</h1>
    <p class="xs-small text-gray text-center mb-5">Users also download</p>
    <div class="row main-content justify-content-center bg-white">

        <div class="col-sm-8 px-0">
            <div class="bd-example">
                <div id="products" class="carousel slide" data-ride="carousel">
