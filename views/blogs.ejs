<% include partials/header %>
<div class="bg-white">
    <div class="container-fluid pt-5 bg-image  pb-6 text-white">
        <h1 class="display-4 text-center text-white mt-6">Blogs</h1>
        <p class="lead text-center">Home > Blog</p>
    </div>
</div>

<section class="bg-white pt-3 pt-sm-0">
    <div class="main-content">
        <h1 class="display-5 text-center text-dark mb-5 pt-5"><span>Latest Blog Posts</span></h1>
        <div class="line w-85 m-auto"></div>
        <div class="row">
            <div class="col-md-8">
                <div class="blog-posts pb-6">
                    <div class="row main-content justify-content-center">


                        <% for(let i = posts.length - 1; i >= 0; i--){ %>
                        <% if(i === posts.length - 4){ %>
                        <%    break; %>
                        <% } %>
                        <div class="col-md-6">
                            <a href="/blogs/view/<%= posts[i].customUrl %>">
                                <div class="card mx-sm-1 mt-5 ">
                                    <img src="/thumbnails/<%= posts[i].image %>" class="card-img-top"
                                        alt="Thumbnail | <%= posts[i].title %>">
                                    <div class="card-body">
                                        <p class="tags">
                                            <%= posts[i].tags.split(" ").splice(0,2).join(", ").toUpperCase() %></p>
                                        <h5 style="font-size: 0.99rem;" class="card-title"><%= posts[i].title %></h5>
                                        <p class="card-text">
                                            <%= posts[i].content.replace(/<[^>]*>?/gm, '').substring(0, 100); %>..</p>
                                        <p class="date">FEB 10, 2019</p>
                                    </div>
                                </div>

                            </a>

                        </div>
                        <% } %>
                    </div>
                    <div class="text-center mt-6 pt-6s mt-sm-4 main-content">
                        <a href="#" class="btn btn-outline load-more small rounded-pill">Browse More</a>
                    </div>
                </div>
            </div>


            <!-- Ninty six 96 characters on three line || 32 characters per line -->
            <h1 class="display-5 text-center text-dark-purple mb-5 pt-5 w-100 d-block d-md-none">Recent Posts</h1>
            <div class="line w-75 pl-6 m-auto d-block d-md-none"></div>
            <div class="col-md mt-md-0">
                <div class="row side-posts mt-5 align-items-center border-bottom-light">
                    <div class="col-2 col-md-3 img-icon px-0">
                        <img class="align-self-center" src="/imgs/logo.png">
                    </div>
                    <div class="col px-0 ml-3">
