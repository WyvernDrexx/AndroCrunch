<% include partials/header %>
<div class="main-content mt-5">
    <form action="/files/<%= file.mimetype %>/<%= file._id %>/edit?_method=PUT" class="pt-5 pb-5" method="POST">
        <div class="form-group p-5 bg-white rounded">
            <label for="fileName">File Name: <span class="text-primary small"><%= file.filename %></span></label>
            <input type="text" name="filename" class="form-control" aria-describedby="file"
                placeholder="File Title for Public" value="<%= file.filename %>" required>
            <label for="fileName">Custom Url:</label>
            <input type="text" name="name" class="form-control" aria-describedby="file name"
                placeholder="Custom Url" value="<%= file.name.split('-').join(' ') %>" required>
            <small id="file" class="form-text xs-small">This is the name of the file which will be seen by the
                public.</small>
            <label for="exampleFormControlTextarea1" class="mt-3">Description:</label>
            <textarea name="description" class="form-control" rows="1" placeholder="File description goes here!"
                required><%= file.description %></textarea>
            <label class="mt-3">File Size: <span class="text-primary small"><%= file.size %> Bytes</span></label>
        </div>
        <button type="submit" class="btn btn-primary">Update Data</button>
    </form>
</div>
<% include partials/footer %>