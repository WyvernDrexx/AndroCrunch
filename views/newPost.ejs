<% include partials/header %>
<% if(typeof post === "undefined"){ %>
<h1 class="display-5 text-white text-center mt-6">New Blog Post</h1>
<section aria-label="New Blog Post">
    <div class="container-fluid">
        <form class="mb-6" action="/posts" method="POST">
            <div class="input-group mb-2 flex-nowrap">
                <div class="input-group-prepend">
                    <span class="input-group-text">Title:</span>
                </div>
                <input type="text" class="form-control" name="title" placeholder="Title" aria-label="Title"
                    aria-describedby="basic-addon1">
            </div>

            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <span class="input-group-text">Custom Url</span>
                </div>
                <input type="text" class="form-control" name="customUrl"
                    placeholder="Url must be unique separeted by single space" aria-label="Custom Url"
                    aria-describedby="basic-addon1">
            </div>

            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <span class="input-group-text">Tags</span>
                </div>
                <input type="text" name="tags" class="form-control" aria-label="Tags" placeholder="Tags">
            </div>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <span class="input-group-text">Meta Description</span>
                </div>
                <textarea  class="form-control" name="metaDescription"
                    placeholder="MetaDescription show on Google Search" 
                    aria-describedby="basic-addon1">  </textarea>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Content</span>
                </div>
                <textarea name="content" class="form-control" aria-label="Post Content"
                    placeholder="Post's Content. HTML Works here.."></textarea>
            </div>
            <button type="submit" class="btn  text-white px-4 btn-purple-color btn-md mt-2 mb-1">Submit
                <div class="spinner-border spinner-border-sm ml-4 d-none" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </button>
        </form>
    </div>
</section>
<% } else{ %>
<h1 class="display-5 text-white text-center mt-6">Upload Image for Post</h1>
<h5 class=" text-white main-content pt-5"><strong>Title: </strong><%= post.title %></h5>
<h5 class="text-white main-content pb-5"><strong>Content: </strong><%= post.content %></h5>
<form action="/post/unpublished/<%= post._id %>/upload" class="main-content pb-6" method="POST"
    enctype="multipart/form-data">
    <div class="input-group mb-2">
        <div class="custom-file">
            <input type="file" name="thumbnail" class="custom-file-input" aria-describedby="File Input">
            <label class="custom-file-label" for="inputGroupFile04" aria-readonly="true">Choose file</label>
        </div>
        <div class="input-group-append">
            <button class="btn btn-secondary" type="submit">Upload</button>
        </div>
    </div>
</form>
<% } %>



