<% include partials/header %>
<div class="bg-white">
    <section class="bg-image pt-6s" aria-labelledby="Header for blog post">
        <div class="main-content pt-6s">
            <div class="row">
                <div class="col-sm px-0">
                    <p class="text-white font-weight-bold text-center text-sm-left post-default-header">
                        Blog Post
                    </p>
                </div>
                <div class="col-sm px-0">
                    <p class="text-white text-center d-block  post-title small text-sm-right">
                        Home > Blog > <span class="font-weight-bold"><%= post.title %></span>
                    </p>
                </div>
            </div>
        </div>
    </section>
</div>
<section class="bg-white pt-5" aria-labelledby="The main content for the blog post">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-8 blog-main-content h-50 px-2">
                <% if(typeof post.image === "undefined"){ %>
                <img class="img-thumbnail" src="/thumbnails/default.jpg">
                <% }else{ %>
                <img class="img-thumbnail" src="/thumbnails/<%= post.image %>">
                <% } %>
                <h1 class="post-header"><%= post.title %></h1>
                <p class="small text-gray">By <%= post.author %>
                    <span class="pl-4">July 20th, 2019</span>
                </p>
                <div aria-labelledby="a horizontal line/separator" class="line-dark pb-4"></div>
                <section aria-labelledby="the main post text" class="">
                    <%- post.content %>
                </section>
            </div>
            <div class="col-sm-4 blog-sub-content h-50 px-3 px-sm-4">
                <div class="advertisement bg-dark">
                    <p class="text-white ml-5 pl-4">Advertisement</p>
                </div>

                <a role="link" href="/blogs/view/<%= latest[2].customUrl %>">
                    <div class="card mx-sm-1 mt-5 ">
                        <img src="/thumbnails/<%= latest[2].image %>" class="card-img-top" alt="<%= latest[2].title %>">
                        <div class="card-body">
                            <p class="tags"><%= latest[2].tags.split(" ").splice(0,2).join(", ").toUpperCase() %></p>
                            <h5 class="card-title"><%= latest[2].title %></h5>
                            <p class="card-text"><%= latest[2].content.replace(/<[^>]*>?/gm, '').substring(0, 100); %>..
                            </p>
                            <p class="date"> <%= moment.tz(latest[2].created, "Asia/Calcutta").format("MMMM Do YYYY") %>
                            </p>
                        </div>
                    </div>
                </a>
                <div class="advertisement bg-dark">
                    <p class="text-white ml-5 pl-4">Advertisement</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="bg-white">
    <div class="main-content pt-4 pb-4">
        <div class="advertisement mt-0  bg-dark">
            <p class="text-white ml-5 pl-4">Advertisement</p>
        </div>
    </div>
    <div class="container-fluid bg-white blog-posts pb-6">
        <h1 class="display-5 text-center text-dark mb-5 pt-5"><span>Latest Blog Posts</span></h1>
        <div class="row main-content justify-content-center">
            <% latest.forEach(post => { %>
            <div class="col-md">
                <a href="/blogs/view/<%= post.customUrl %>">
                    <div class="card mx-sm-1 mt-5 ">
                        <img src="/thumbnails/<%= post.image %>" class="card-img-top" alt="<%= post.title %>">
                        <div class="card-body">
                            <p class="tags"><%= post.tags.split(" ").splice(0,2).join(", ").toUpperCase() %></p>
                            <p class="card-title"><%= post.title %></p>
                            <p class="card-text"><%= post.content.replace(/<[^>]*>?/gm, '').substring(0, 100); %>..</p>
                            <p class="date">
                                <%= moment.tz(post.created, "Asia/Calcutta").format("MMMM Do YYYY") %></p>
                        </div>
                    </div>
                </a>
            </div>
            <% }) %>
        </div>
        <div class="text-center mt-5 pb-6">
            <a href="#" class="btn btn-outline load-more small rounded-pill">Browse More</a>
        </div>
    </div>
    <div class="container main-content pt-5 pb-5">
        <h1 class="display-5 text-center">Share Your Opinions</h1>
        <p class="xs-small text-gray text-center">Your email address will not be published. Required fields are marked
            with *</p>
        <form class="comment mt-3 text-center">
            <div class="row">
                <div class="col-sm">
                    <textarea class=" bg-white rounded" placeholder="Write Your Comment *"></textarea>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-sm">
                    <input class="bg-white rounded" type="text" placeholder="Name *" required>
                </div>
                <div class="col-sm">
                    <input class="bg-white  rounded" type="email" placeholder="Email *" required>
                </div>
                <div class="col-sm">
                    <input class="bg-white rounded" type="text" placeholder="Website" required>
                </div>
            </div>
            <button class="btn btn-primary text-white btn-md rounded-pill mt-4 text-center px-4 pt-2 pb-2"
                type="submit">Post
                Comment</button>
        </form>
    </div>
</section>


<% include partials/footer %>