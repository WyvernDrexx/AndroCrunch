<% include partials/header %>
<h1 class="display-5 text-white text-center mt-6">Register</h1>
<h3 class="lead text-white text-center pb-6">Get access to pro items</h3>
<section aria-label="Register form">
    <div class="container">
        <form class="compact-form mb-6" action="/register" method="POST">
            <div class="input-group mb-2 flex-nowrap">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Username</span>
                </div>
                <input type="text" class="form-control" name="username" placeholder="Username" aria-label="Username"
                    aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3flex-nowrap">
                <div class="input-group-prepend">
                    <span class="input-group-text pr-3" id="basic-addon1">Password</span>
                </div>
                <input type="password" name="password" class="form-control" placeholder="Password" aria-label="Password"
                    aria-describedby="basic-addon1">
            </div>
            <button type="submit" class="btn  text-white px-4 btn-purple-color btn-md mt-2 mb-6">Submit  </button>
        </form>


    </div>
</section>

<% include partials/footer %>